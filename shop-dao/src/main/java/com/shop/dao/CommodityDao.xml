<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--  配置为包名+接口名  实现 代理模式
  接口中 每一个方法  都与  标签的id对应
-->
<mapper namespace="com.shop.dao.CommodityDao">
    <resultMap id="queryAll" type="Commodity">
        <result property="cId" column="cid"></result>
        <collection property="commodityType" ofType="commodityType"
                    javaType="commodityType" select="com.shop.dao.CommodityTypeDao.queryCommodityTypeByCid" column="cid"></collection>
    </resultMap>
    <!--根据条件查询所有商品-->
    <select id="queryAllCommodity" parameterType="Commodity" resultMap="queryAll">
        select * from commodity
        <where>
            <if test="cName!=null and cName!='' ">cName=#{cName}</if>
            <if test="tId!=null and tId!='' ">tId=#{tId}</if>
            <if test="price!=null and price!='' ">price=#{price}</if>
            <if test="purchaseState !=null and purchaseState!=''">
                purchaseState=#{purchaseState}
            </if>
        </where>
    </select>
    <!--根基条件查询所有商品数量-->
    <select id="queryCountCommodity" parameterType="Commodity" resultType="int">
        select count(*) from commodity
        <where>
            <if test="cName!=null and cName!='' ">cName=#{cName}</if>
            <if test="tId!=null and tId!='' ">tId=#{tId}</if>
            <if test="price!=null and price!='' ">price=#{price}</if>
            <if test="purchaseState !=null and purchaseState!=''">
                purchaseState=#{purchaseState}
            </if>
        </where>
    </select>


    <!--  ❗❗❗❗  上面为供货商代码———————————————————————————————————————————————————————————————————— -->


    <!--删除商品   （逻辑删除）-->
    <update id="delCommodityById" parameterType="int">
        UPDATE commodity SET state=0  WHERE cId=#{id}
    </update>
    <!--修改商品信息-->
    <update id="updateCommodityById" parameterType="Commodity">
        UPDATE commodity SET cName=#{cName},tId=#{tId},price=#{price},picture=#{picture},introduce=#{introduce}  WHERE cId=#{cId}
    </update>
    <!--添加商品信息-->
    <insert id="insertCommodity" parameterType="Commodity">
        INSERT INTO commodity(cName,tId,price,picture,introduce)values(#{cName},#{tId},#{price},#{picture},#{introduce})
    </insert>

    <!--    根据编号 查询商品信息-->
    <select id="queryCommodityById" parameterType="Commodity" resultType="Commodity">
        select * from Commodity where cid=#{id}
    </select>


</mapper>