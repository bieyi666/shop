<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--  配置为包名+接口名  实现 代理模式
  接口中 每一个方法  都与  标签的id对应
-->
<mapper namespace="com.shop.dao.UserDao">

    <!--查询所有用户信息-->
    <select id="queryAllUser" parameterType="list" resultType="userInfo">
        select * from user_info
    </select>

    <!--查询用户总数-->
    <select id="queryCountUser" parameterType="list" resultType="int">
        select count(*) from user_info
    </select>


    <!--    .....................前台个人中心页面..............................-->
    <!--    查询用户个人信息-->
    <select id="queryUserInfo" resultType="userInfo">
        select * from user_info where uId = #{uid}
    </select>

    <update id="editUserInfo" parameterType="userInfo">
        UPDATE
              `user_info`
            SET
              `uName` = #{uName},
              `phone` = #{phone},
              `photo` = #{photo}
            WHERE `uId` = #{uid} ;
    </update>
    <!--    .................................................................-->
</mapper>